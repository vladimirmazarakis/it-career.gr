@page
@using Microsoft.Extensions.Localization
@using System.Globalization
@using IT_Career_GR.Common.Services
@using IT_Career_GR.Common.Services.Abstractions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel
@inject ICustomLocalizer localizer

@{
    ViewData["Title"] = localizer["LogIn"];
}

<link rel="stylesheet" href="~/css/authentication.css"/>
<link rel="stylesheet" href="~/css/common.css" />

<div class="it-login-block">
<h1 class="it-login-title">@ViewData["Title"]</h1>
<div class="row">
    <div class="inside-block">
        <section>
            <form id="account" method="post">
                <p class="it-login-desc">@localizer["LogInDesc"]</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control it-text-input" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control it-text-input" autocomplete="current-password" aria-required="true" />
                    <label class="form-label">@localizer["Password"]</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">@localizer["ForgotPassword"]</a>
                    </p>
                </div>
                <div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-danger">@localizer["LogIn"]</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>
